<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_back"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/oneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍋"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/fourTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍒"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/sevenTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍇"
                android:textSize="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/twoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍆"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/fiveTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍀"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/eightTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💰"
                android:textSize="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/threeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/sixTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔔"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/nineTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7️⃣"
                android:textSize="50dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/amountOfCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_coins"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>